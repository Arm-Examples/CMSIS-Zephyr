{
    "version": "2.0.0",
    "tasks": [
        {
			"label": "Initialize Zephyr west workspace",
			"type": "shell",
			"command": "west init -m https://github.com/alifsemi/sdk-alif.git --mr main",
		},
		{
			"label": "Update Zephyr west workspace",
			"type": "shell",
			"command": "west update",
		},
        {
            "label": "CMSIS Erase",
            "type": "shell",
            "command": "pyocd",
            "args": [
                "erase",
                "--probe",
                "cmsisdap:",
                "--chip",
                "--cbuild-run",
                "${command:cmsis-csolution.getCbuildRunFile}"
            ],
            "problemMatcher": []
        },
        {
            "label": "CMSIS Load",
            "type": "shell",
            "command": "pyocd",
            "args": [
                "load",
                "--probe",
                "cmsisdap:",
                "--cbuild-run",
                "${command:cmsis-csolution.getCbuildRunFile}"
            ],
            "problemMatcher": []
        },
        {
            "label": "CMSIS Run",
            "type": "shell",
            "command": "pyocd",
            "args": [
                "gdbserver",
                "--probe",
                "cmsisdap:",
                "--connect",
                "attach",
                "--persist",
                "--reset-run",
                "--cbuild-run",
                "${command:cmsis-csolution.getCbuildRunFile}"
            ],
            "problemMatcher": []
        },
        {
            "label": "CMSIS Load+Run",
            "dependsOn": [
                "CMSIS Load",
                "CMSIS Run"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        }
    ]
}